//- extend layout

doctype
html( lang="en" )
    head
        title Mina Protocol Mempool - Pending Transactions
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        meta( name='description', content='Mina Protocol Mempool - Pending Transactions' )
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
        style(type='text/css').
            .tx {
                padding: 0 0 15px 15px;
                column-count:8;
                -moz-column-count:8;
                -webkit-column-count:8;
            }
            @media screen and (max-width: 992px) {
                .tx {
                    padding: 0 0 15px 15px;
                    column-count:4;
                    -moz-column-count:4;
                    -webkit-column-count:4;
                }
            }
            @media screen and (max-width: 600px) {
                .tx {
                    padding: 0 0 15px 15px;
                    column-count:2;
                    -moz-column-count:2;
                    -webkit-column-count:2;
                }
            }
            @media screen and (max-width: 375px) {
                .tx {
                    padding: 0;
                    column-count:1;
                    -moz-column-count:1;
                    -webkit-column-count:1;
                }
                .tx table {
                    width: 100%;
                }
            }
            .one {
                background-color: #deede6;
            }
            .two {
                background-color: #f5f3e7;
            }
            .three {
                background-color: #d5e4c3;
            }
            td{
                padding: 2px 10px 2px 10px;
            }
            thead{
                font-weight: bold;
                text-decoration: underline;
            }
            .status {
                padding: 10px;
            }
            .status td {
                word-break: break-all;
            }
    body(style="padding-bottom:10rem;")
        div.status
            table
                tr
                    td Blockchain Length:
                    td #{daemonStatus.blockchainLength}
                tr
                    td Highest Block Length Received:
                    td #{daemonStatus.highestBlockLengthReceived}
                tr
                    td Sync Status:
                    td #{daemonStatus.syncStatus}
                tr
                    td Commit ID:
                    td #{daemonStatus.commitId}
                tr
                    td Chain ID:
                    td #{daemonStatus.chainId}
        div.tx
            table
                thead
                    tr
                        td.one Fee
                        td.two Tx count
                        td.three Total Tx
                tbody
                    each tx in txList
                        tr
                            td.one= tx.fee
                            td.two= tx.count
                            td.three= tx.total